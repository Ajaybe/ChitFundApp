<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tool_bar">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_bank_dtl"
                app:title="Bank Details"
                app:titleTextColor="@android:color/white"
                app:navigationIcon="@drawable/ic_arrow_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </com.google.android.material.appbar.AppBarLayout>
    </LinearLayout>




    <ScrollView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.PersonalDetails">


        <LinearLayout
            tools:ignore="HardcodedText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:text="Bank Name"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_bd_bankName"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autofillHints="Name"
                    android:background="@drawable/ic_field_background"
                    android:drawablePadding="12dp"
                    android:gravity="start"
                    android:hint="Bank Name"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:text="Branch Name"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_bd_bankBranck"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autofillHints="Name"
                    android:background="@drawable/ic_field_background"
                    android:drawablePadding="12dp"
                    android:gravity="start"
                    android:hint="Branch Name"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:text="IFSC Code"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_bd_bankIFSC"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autofillHints="Name"
                    android:background="@drawable/ic_field_background"
                    android:drawablePadding="12dp"
                    android:gravity="start"
                    android:hint="IFSC Code"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <TextView
                    android:text="Account Number"
                    android:textSize="16sp"
                    android:padding="10dp"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:id="@+id/et_bd_accNo"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:autofillHints="Name"
                    android:background="@drawable/ic_field_background"
                    android:drawablePadding="12dp"
                    android:gravity="start"
                    android:hint="Account Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:maxLines="1"
                    android:textSize="16sp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>